cd /export/home/oracle
. /etc/profile
. ./.profile

mailinglist="cnichols@mdsol.com,dgemzik@mdsol.com,ppatel@mdsol.com"
cclist="mpasupuleti@mdsol.com,dmishra@mdsol.com"
sender="noreply@mdsol.com"

export ORACLE_SID=prod
export current_date=`date`
sqlplus -s tsm10/`get_pwd tsm10` <<EOF 

set feedback off
set lin 300
set pages 1000
alter session set nls_date_format='DD-MON-YYYY HH24:MI';
set markup html on 
spool /export/home/oracle/log/designer_all_logged_1week.html

set heading off
ttitle left 'Report run date: '_DATE' PDT' SKIP 2 -
       left bold ' Designer Weekly Login Report';
set heading on

SELECT a.client_div_identifier "Client Division", b.first_name||' '||b.last_name "User", 
c.action "Action", To_Char(c.modify_date,'MM/DD/YYYY HH24:MI') "Timestamp"
FROM audit_hist c, ftuser b, client_div a WHERE  
c.ftuser_id=b.id AND b.client_div_id=a.id and
c.app_type='TSPD' AND c.modify_date BETWEEN SYSDATE -7 AND SYSDATE
ORDER BY  a.client_div_identifier, b.first_name||' '||b.last_name,c.modify_date;

spool off
set markup html off;
exit;
EOF

cat /export/home/oracle/log/designer_all_logged_1week.html | \
uuencode designer_weekly_login.html | mailx -s "Designer Weekly Login Report" -r $sender -c $cclist $mailinglist
